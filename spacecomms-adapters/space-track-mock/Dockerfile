FROM rust:1.75-bookworm as builder
WORKDIR /app
COPY . .
RUN cargo build --release -p space-track-mock

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
COPY --from=builder /app/target/release/space-track-mock /usr/local/bin/
EXPOSE 9000
CMD ["space-track-mock"]
